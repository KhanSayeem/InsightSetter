generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

model Article {
  id          String          @id @default(cuid())
  title       String
  summary     String?
  content     String
  status      ArticleStatus   @default(PENDING)
  authorName  String
  authorEmail String?
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  submittedAt DateTime        @default(now())
  reviewedAt  DateTime?
  publishedAt DateTime?
  slug        String          @unique
  reviewNotes String?
  categoryId  String
  category    Category        @relation(fields: [categoryId], references: [id], onDelete: Restrict, onUpdate: Cascade)
  tags        String[]        @default([])

  // Relations
  pageViews   PageView[]
}

model Subscriber {
  id             String           @id @default(cuid())
  email          String           @unique
  status         SubscriberStatus @default(ACTIVE)
  createdAt      DateTime         @default(now()) @db.Timestamptz(6)
  updatedAt      DateTime         @default(now()) @updatedAt @db.Timestamptz(6)
  unsubscribedAt DateTime?        @db.Timestamptz(6)
}

model PageView {
  id          String    @id @default(cuid())
  article     Article   @relation(fields: [articleId], references: [id], onDelete: Cascade)
  articleId   String
  occurredAt  DateTime  @default(now()) @db.Timestamptz(6)
  countryCode String?   @db.Char(2)
  isBot       Boolean   @default(false)

  @@index([articleId, occurredAt])
  @@index([articleId, countryCode])
  @@index([occurredAt])
  @@index([countryCode])
}

enum ArticleStatus {
  DRAFT
  PENDING
  APPROVED
  PUBLISHED
  REJECTED
}

enum SubscriberStatus {
  ACTIVE
  UNSUBSCRIBED
}

model Category {
  id          String    @id @default(cuid())
  label       String
  slug        String    @unique
  description String?
  railTitle   String?
  navPinned   Boolean   @default(false)
  navPinnedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  articles    Article[]
}
